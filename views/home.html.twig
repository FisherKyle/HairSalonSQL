<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link href="/styles.css" rel="stylesheet" type="text/css">
        <title>Hair Management Systems</title>
    </head>

    <body>
        <div class="container jumbotron" id="big_box">
            <div id="inner_box">
                <div class = "row">
                    <div class = "col-xs-8" id="home_left_col">
                        <h2>barbery <span id="home"> home</span></h2>

                        <form action="/stylist_list" method="post">
                            <div class="form-group has-primary">
                                <label for = "stylist" id="begin_label">begin by adding a stylist to the team:</label>
                                <input class="form-control" type="text" id="stylist_name" name="stylist_name" class="form-control" placeholder="enter stylist name here" required>
                            </div>
                            <button type="submit" class="btn btn-success">add stylist</button></br>
                        </form>

                        {% if stylists is not empty %}
                            <ul>
                                {% for stylist in stylists %}
                                    <li><a href="/stylist_list/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>

                    <div class "col-xs-2" id="home_header">
                        <h2><span id="divider">|</span></h2>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
