<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link href="styles.css" rel="stylesheet" type="text/css">
        <title>Hair Management Systems</title>
    </head>

    <body>
        <div class="container jumbotron" id="big_box">
            <div class = "row">
                <h2>Hair Management Systems:</h2>

                <div class = "col-xs-6">
                    <form action="/updated_stylist" method="post">
                        <div class="form-group has-primary">
                            <label for = "stylist">stylist name:</label>
                            <input class="form-control" type="text" id="stylist_name" name="stylist_name" class="form-control" placeholder="ex: Scissors Armani" required>

                        </div>
                        <button type="submit" class="btn btn-success">add stylist</button></br>
                    </form>
                    {% for course in courses %}
                    <h4><a href="/stylists/{{ stylist.getId }}">{{ stylist.getName }}</a></h4>
                    {% endfor %}

                </div>

                <div class = "col-xs-6">
                    <form action="/updated_client" method="post">
                        <div class="form-group has-primary">
                            <label for = "client">client name:</label>
                            <input class="form-control" type="text" id="client_name" name="client_name" class="form-control" placeholder="ex: Phillip Fruff" required>

                        </div>
                        <button type="submit" class="btn btn-success">add client</button></br>
                    </form>
                    {% for student in students %}
                    <h4><a href="/clients/{{ client.getId }}">{{ client.getName }}</a></h4>
                    {% endfor %}
                </div>

        </div>
    </body>
</html>
